.roles-list-page {
  padding: 0;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding: 0 0.5rem;
}

.page-title {
  font-size: 1.75rem;
  font-weight: 600;
  color: var(--portal-text-primary);
  margin: 0;
  display: flex;
  align-items: center;
}

.page-title i {
  color: var(--portal-primary);
}

.btn-add-role {
  background: var(--portal-primary);
  color: white;
  border: none;
  border-radius: 8px;
  padding: 0.625rem 1.25rem;
  font-size: 0.9375rem;
  font-weight: 500;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 0.5rem;
  transition: all 0.2s ease;

  &:hover {
    background: var(--portal-primary-hover);
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  &:active {
    transform: translateY(0);
  }

  i {
    font-size: 1rem;
  }
}

.roles-table-container {
  margin-top: 1.5rem;
}

// Custom role cell styles
.role-cell {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.role-badge-container {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.role-badge {
  display: inline-flex;
  align-items: center;
  padding: 0.375rem 0.75rem;
  border-radius: 6px;
  color: white;
  font-size: 0.875rem;
  font-weight: 600;
  white-space: nowrap;
}

.system-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  background: rgba(108, 117, 125, 0.1);
  color: #6c757d;
  font-size: 0.75rem;
  font-weight: 500;

  i {
    font-size: 0.625rem;
  }
}

.role-description {
  font-size: 0.8125rem;
  color: var(--portal-text-secondary);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

// Access areas cell styles
.access-areas-cell {
  display: flex;
  flex-wrap: wrap;
  gap: 0.375rem;
  align-items: center;
}

.access-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  padding: 0.25rem 0.625rem;
  border-radius: 12px;
  font-size: 0.75rem;
  font-weight: 500;
  white-space: nowrap;
  color: white;

  i {
    font-size: 0.625rem;
  }
}

.access-hr {
  background: #2563eb;
}

.access-technical {
  background: #7c3aed;
}

.access-admin {
  background: #dc2626;
}

.access-candidate {
  background: #059669;
}

.no-access {
  font-size: 0.8125rem;
  color: var(--portal-text-secondary);
  font-style: italic;
}

// Status cell styles
.status-cell {
  display: flex;
  justify-content: center;
}

.status-badge {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.75rem;
  border-radius: 6px;
  font-size: 0.8125rem;
  font-weight: 500;
  white-space: nowrap;

  i {
    font-size: 0.875rem;
  }
}

.status-active {
  background: rgba(5, 150, 105, 0.1);
  color: #059669;

  i {
    color: #059669;
  }
}

.status-inactive {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;

  i {
    color: #ef4444;
  }
}

@media (max-width: 768px) {
  .page-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }

  .page-title {
    font-size: 1.5rem;
  }

  .btn-add-role {
    width: 100%;
    justify-content: center;
  }

  .role-cell {
    gap: 0.75rem;
  }

  .role-badge {
    width: 2rem;
    height: 2rem;
    font-size: 1rem;
  }
}